<theme>
    <formatVersion>4</formatVersion>

	<view name="system">
		<image name="background" extra="true">
			<tile>true</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/background.png</path>
		</image>

		<image name="header" extra="true">
			<path>./art/header.png</path>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.16</size>
		</image>

		<image name="footer" extra="true">
			<path>./art/footer.png</path>
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.065</size>
		</image>

		<image name="logo">
			<path>./art/xcade-logo.png</path>
			<pos>0.025 0.0775</pos>
			<maxSize>0.55 0.1</maxSize>
			<origin>0 0.5</origin>
		</image>

		<helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
		</helpsystem>
	</view>

	<view name="basic, detailed, grid">

		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
